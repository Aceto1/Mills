        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.MiddleMiddleLeft}}" HorizontalAlignment="Left" Margin="88,15,0,0" VerticalAlignment="Center" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.MiddleMiddleRight}}" HorizontalAlignment="Left" Margin="381,15,0,0" VerticalAlignment="Center" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.MiddleBottomLeft}}" HorizontalAlignment="Left" Margin="88,381,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.MiddleBottomMiddle}}" HorizontalAlignment="Left" Margin="235,381,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.MiddleBottomRight}}" HorizontalAlignment="Left" Margin="381,381,0,0" VerticalAlignment="Top" Width="30" Height="30"/>

        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerTopLeft}}" HorizontalAlignment="Left" Margin="160,160,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerTopMiddle}}" HorizontalAlignment="Left" Margin="235,160,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerTopRight}}" HorizontalAlignment="Left" Margin="308,160,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerMiddleLeft}}" HorizontalAlignment="Left" Margin="160,15,0,0" VerticalAlignment="Center" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerMiddleRight}}" HorizontalAlignment="Left" Margin="308,15,0,0" VerticalAlignment="Center" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerBottomLeft}}" HorizontalAlignment="Left" Margin="160,308,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
        <Image IsHitTestVisible="False" Source="{Binding TokenPositions, Converter={StaticResource ResourceKey=BoardPositionsToImageSourceConverter}, ConverterParameter={x:Static Enum:ButtonPosition.InnerBottomMiddle}}" HorizontalAlignment="Left" Margin="235,308,0,0" VerticalAlignment="Top" Width="30" Height="30"/>
