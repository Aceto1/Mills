        <Button Command="{Binding ButtonClickCommand}" CommandParameter="{x:Static Enum:BoardPosition.OuterMiddleLeft}" HorizontalAlignment="Left" Margin="19,15,0,0" VerticalAlignment="Center" Opacity="0" Width="30" Height="30" />
